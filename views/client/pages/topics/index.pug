extends ../../layouts/default.pug
include ../../mixins/box-head.pug


block main
  .container.my-3
    .row
      .col-12
        +box-head(pageTitle)
   
    .row.topic-list
      each topic in topics
        .col-6.col-md-4.col-lg-3.mb-4
          .topic-card
            a(href=`/songs/${topic.slug}`)
              img(src=topic.avatar alt=topic.title)
            .topic-info
              h5= topic.title
              p= topic.description





